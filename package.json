{
  "name": "service-template-ts",
  "version": "0.0.3-4",
  "description": "Typscript Simplified Template",
  "main": "index.js",
  "repository": {
    "type": "git"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "start": "npm run build && npm run prod",
    "build": "npm run clean && tsc",
    "prod": "node -r dotenv/config dist/index.js",
    "dev": "nodemon",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TS,Lint,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm:watch-ts\" \"npm:watch-lint\" \"npm:watch-node\"",
    "test": "jest --forceExit --detectOpenHandles",
    "test-coverage": "jest --forceExit --coverage --detectOpenHandles",
    "clean": "rimraf dist/*",
    "lint": "./node_modules/.bin/eslint src/**/*.ts --max-warnings=0",
    "lint:fix": "./node_modules/.bin/eslint src/**/*.ts --fix",
    "watch-ts": "tsc -w --preserveWatchOutput",
    "watch-test": "npm run test -- --watchAll",
    "watch-node": "nodemon dist/index.js",
    "watch-lint": "onchange 'src/**/*.ts' -- npm run lint -- --force",
    "typedoc": "typedoc",
    "doc": "npm run typedoc -- --exclude \"**/*+(test|tests|spec).ts\" --excludePrivate --out ./dist/doc ./src",
    "decryptEnv": "gcloud kms decrypt --ciphertext-file=.env.enc --plaintext-file=.env --location=global --keyring=ambrite --key=typescript-template --project=ambrite-internal",
    "encryptEnv": "gcloud kms encrypt --ciphertext-file=.env.enc --plaintext-file=.env --location=global --keyring=ambrite --key=typescript-template --project=ambrite-internal"
  },
  "author": "ambrite AG",
  "license": "UNLICENSED",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.6",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "onchange": "^6.1.0",
    "prettier": "1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "typedoc": "^0.16.2",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}
